<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true">
    <property name="log.dir" value="${user.home}/logs"/>
    <springProfile name="dev,alp">
        <property name="log.dir" value="/app/tomcat/logs"/>
    </springProfile>
    <springProfile name="prod">
        <property name="log.dir" value="/app/tomcat/logs"/>
    </springProfile>
    <property name="log.fileName" value="svr_ADDTc-was1.out"/>

    <define name="DEFAULT_HOSTNAME" class="kr.co.syrup.adreport.framework.log.HostnamePropertyDefiner"/>

<!--    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">-->
